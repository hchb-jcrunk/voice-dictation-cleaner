# Voice Dictation Cleaner - Environment Configuration Template
# Copy this file to .env and fill in your API keys

# ============================================
# ENTERPRISE MODE (for work/IP-sensitive content)
# ============================================

# OpenAI API Configuration
OPENAI_API_KEY_ENTERPRISE=your-enterprise-openai-api-key-here
OPENAI_MODEL_ENTERPRISE=gpt-4
OPENAI_AUDIO_MODEL_ENTERPRISE=whisper-1

# Recording Settings
RECORDING_DURATION_ENTERPRISE=10

# Azure OpenAI (Optional - set USE_AZURE_ENTERPRISE=true to enable)
USE_AZURE_ENTERPRISE=false
AZURE_OPENAI_API_KEY_ENTERPRISE=your-azure-enterprise-key
AZURE_OPENAI_ENDPOINT_ENTERPRISE=https://your-resource.openai.azure.com/
AZURE_DEPLOYMENT_NAME_ENTERPRISE=gpt-4
AZURE_AUDIO_DEPLOYMENT_NAME_ENTERPRISE=whisper

# ============================================
# PERSONAL MODE (for non-IP content)
# ============================================

# OpenAI API Configuration
OPENAI_API_KEY_PERSONAL=your-personal-openai-api-key-here
OPENAI_MODEL_PERSONAL=gpt-4
OPENAI_AUDIO_MODEL_PERSONAL=whisper-1

# Recording Settings
RECORDING_DURATION_PERSONAL=10

# Azure OpenAI (Optional - set USE_AZURE_PERSONAL=true to enable)
USE_AZURE_PERSONAL=false
AZURE_OPENAI_API_KEY_PERSONAL=your-azure-personal-key
AZURE_OPENAI_ENDPOINT_PERSONAL=https://your-resource.openai.azure.com/
AZURE_DEPLOYMENT_NAME_PERSONAL=gpt-4
AZURE_AUDIO_DEPLOYMENT_NAME_PERSONAL=whisper
